{# Macro for generate media video #}
{% macro video(source) %}
  <video class="o-media--video" playsinline>    
    {% for src, type in source -%}
      <source src="{{ src }}" type="{{ type }}">
    {%- endfor %}
  </video>
  {% include "controls.njk" %}
{% endmacro %}